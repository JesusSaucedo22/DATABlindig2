<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.ElementosXAML.MainPage"
             Title="Escreibe ">

    <VerticalStackLayout>

        <Border Stroke="Gray"
                Margin="16,4"
                Padding="16">
            
            <VerticalStackLayout>
                <Label 
                    Text="Escriba una idea"
                    TextColor="Black"/>

                <Entry 
                    x:Name="TextEntry"
                    TextColor="Black"
                    Background="#FFFFF0"
                    TextChanged="OnEntry_TextChanged" />
                
            </VerticalStackLayout>
       
        </Border>

        <Label 
            HorizontalOptions="Center"
            FontSize="24"
            FontFamily="Small"
            Text="Mostrar idea" />

        <Label 
            HorizontalOptions="Center"
            FontAttributes="Italic"
            x:Name="TextLabel"
            Padding="0.38"
            Text="{Binding Source={x:Reference TextEntry}, Path=Text}"/>

    </VerticalStackLayout>

</ContentPage>