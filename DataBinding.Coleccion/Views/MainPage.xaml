<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:DataBinding.Coleccion.Models"
             x:Class="DataBinding.Coleccion.NewFolder1.MainPage"
             Title="MainPage"
             BackgroundColor="#686868">

    <Grid 
        RowDefinitions="Auto,*,Auto" 
        Padding="16" 
        BackgroundColor="#686868">


        <Grid 
            ColumnDefinitions="*,Auto,Auto" 
            ColumnSpacing="8">

            <Label 
            Text="ORIGEN DEL PAQUETE" 
            VerticalOptions="Center"
            FontAttributes="Bold"
            FontSize="16"
            TextColor="Black"/>

            <Button
            Grid.Column="1"
            Text="+"
            BackgroundColor="White"
            TextColor="Green"
            FontAttributes="Bold"
            FontSize="14"
            BorderColor="Gray"
            BorderWidth="1"
            WidthRequest="30"
            HeightRequest="30"
            CornerRadius="4"
            Clicked="OnAgregarButtonClicked"/>

            <Button
            Grid.Column="2"
            Text="X"
            BackgroundColor="White"
            TextColor="Red"
            FontAttributes="Bold"
            FontSize="14"
            BorderColor="Gray"
            BorderWidth="1"
            WidthRequest="30"
            HeightRequest="30"
            CornerRadius="4"
            Clicked="OnDeleteButtonClicked"/>
        </Grid>

        <CollectionView
            Grid.Row="1"
            BackgroundColor="#4c4c45"
            ItemsSource="Baiding "
            SelectionMode="Single"
            EmptyView="Aun no se registran origenes de paquetes"
            SelectionChanged="OrigenesListView_SelectionChanged"
            x:Name="OrigenesListView">

        </CollectionView>

        <Grid 
            Grid.Row="2" 
            RowDefinitions="Auto,Auto" 
            RowSpacing="16" 
            ColumnDefinitions="Auto,*,Auto">

            
            <Label 
            Text="NOMBRE:" 
            VerticalOptions="Center"
            FontAttributes="Bold"
            TextColor="Black"/>

            <Entry
            Grid.Column="1"
            Margin="0,15,0,0"
            BackgroundColor="White"
            TextColor="Black"
            x:Name="NombreEntry"/>

            
            <BoxView 
                Grid.Column="2" 
                Color="Transparent"/>

            
            <Label 
            Grid.Row="1"
            Text="ORIGEN:" 
            VerticalOptions="Center"
            FontAttributes="Bold"
            TextColor="Black"/>

            <Entry
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="White"
            TextColor="Black"
            x:Name="OrigenEntry"/>

            <Button
            Grid.Row="1"
            Grid.Column="2"
            Margin="10,0,0,0"
            Text="Actualizar"
            BackgroundColor="White"
            TextColor="Black"
            FontAttributes="Bold"
            BorderColor="Gray"
            BorderWidth="1"
            CornerRadius="4"
            Padding="12,8"
            Clicked="OnActualizar"/>
        </Grid>
    </Grid>

</ContentPage>